{
  "name": "angular2-webpack-lib",
  "version": "1.0.0",
  "description": "A webpack starter for Angular",
  "author": "Denys Vuika <denys.vuika@gmail.com>",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy:static",
    "link": "npm run build && npm run clean:parent && npm run copy:parent",
    "copy:static": "cpx \"./src/**/*.{html,css,json,png,jpg,gif,svg}\" ./dist/src",
    "clean:parent": "rimraf ../demo-app/node_modules/angular2-webpack-lib/",    
    "copy:parent": "cpx \"dist/**/*\" ../demo-app/node_modules/angular2-webpack-lib"
  },
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.2.0",
    "@angular/compiler": "~2.2.0",
    "@angular/core": "~2.2.0",
    "@angular/forms": "~2.2.0",
    "@angular/http": "~2.2.0",
    "@angular/platform-browser": "~2.2.0",
    "@angular/platform-browser-dynamic": "~2.2.0",
    "@angular/router": "~3.2.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "cpx": "^1.5.0",
    "rimraf": "^2.5.2",
    "typescript": "2.0.3"
  }
}
